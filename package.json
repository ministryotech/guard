{
  "name": "arg-guard",
  "version": "2.1.0",
  "author": "Keith Jackson",
  "license": "MIT",
  "private": false,
  "keywords": [
    "arguments",
    "guard"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryotech/guard.git"
  },
  "main": "arg-guard.js",
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-defaults": "^9.0.0",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {},
  "scripts": {
    "lint": "eslint src/*.js --fix",
    "ensure-dir": "mkdir ./dist",
    "clean": "rm -rf ./dist",
    "uglify": "uglifyjs src/arg-guard.js -m -o ./dist/arg-guard.js && uglifyjs src/arg-guard.js -m -c -o ./dist/arg-guard.min.js",
    "build": "npm run clean && npm run ensure-dir && npm run uglify && cp README.md ./dist/ && cp package.json ./dist/",
    "publish-to-npm": "npm publish dist/",
    "build-tar-for-github": "tar -czvf arg-guard.tar.gz dist/",
    "release": "npm run lint && npm run build && npm run publish-to-npm && npm run build-tar-for-github"
  }
}
